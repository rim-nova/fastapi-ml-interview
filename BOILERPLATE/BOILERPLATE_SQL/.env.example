# =============================================================================
# FastAPI SQL Boilerplate - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="FastAPI SQL App"
APP_DESCRIPTION="Production-ready FastAPI with PostgreSQL and Alembic"
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true  # Set false in production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fastapi_db

# Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800  # Recycle connections after 30 minutes

# Echo SQL (debug only)
DB_ECHO=false

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure key for production!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production-please

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Settings
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12  # Higher = more secure but slower

# API Key (optional)
API_KEY_HEADER=X-API-Key
API_KEYS=  # Comma-separated list of valid API keys

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# -----------------------------------------------------------------------------
# API Documentation
# -----------------------------------------------------------------------------
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json
API_V1_PREFIX=/api/v1

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------
# Redis (for caching/sessions)
# REDIS_URL=redis://localhost:6379/0

# Email
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# EMAILS_FROM_EMAIL=noreply@example.com
# EMAILS_FROM_NAME=FastAPI App

# AWS S3 (for file uploads)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=

# Sentry (error tracking)
# SENTRY_DSN=
