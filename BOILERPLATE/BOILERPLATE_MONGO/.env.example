# =============================================================================
# FastAPI MongoDB Boilerplate - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="FastAPI MongoDB App"
APP_DESCRIPTION="Production-ready FastAPI with MongoDB"
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true  # Set false in production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
# Local MongoDB
MONGODB_URL=mongodb://localhost:27017

# MongoDB with authentication
# MONGODB_URL=mongodb://username:password@localhost:27017

# MongoDB Atlas (cloud)
# MONGODB_URL=mongodb+srv://username:password@cluster.xxxxx.mongodb.net

# Database name
MONGODB_DB_NAME=fastapi_db

# Connection Pool Settings
MONGODB_MIN_POOL_SIZE=1
MONGODB_MAX_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME_MS=30000

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure key for production!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production-please

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Settings
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12

# API Key (optional)
API_KEY_HEADER=X-API-Key
API_KEYS=  # Comma-separated list

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# -----------------------------------------------------------------------------
# API Documentation
# -----------------------------------------------------------------------------
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json
API_V1_PREFIX=/api/v1

# -----------------------------------------------------------------------------
# Redis (Optional - for caching/sessions)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379/0
