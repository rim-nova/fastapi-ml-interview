# =============================================================================
# FASTAPI BOILERPLATE - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update values as needed
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
APP_NAME="FastAPI Interview App"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Production-ready FastAPI application"
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# API Settings
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# -----------------------------------------------------------------------------
# SERVER SETTINGS
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=1  # Increase in production (2-4 per CPU core)
RELOAD=true  # Set to false in production

# -----------------------------------------------------------------------------
# DATABASE SETTINGS
# -----------------------------------------------------------------------------
# SQLite (Default - fastest setup)
DATABASE_URL=sqlite:///./app.db

# PostgreSQL (uncomment for production)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/mydb
# DATABASE_URL=postgresql://postgres:password@db:5432/mydb  # Docker

# MySQL (uncomment if using MySQL)
# DATABASE_URL=mysql+pymysql://root:password@localhost:3306/mydb

# Connection Pool Settings (PostgreSQL/MySQL only)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_ECHO=false  # Set true to log SQL queries

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12

# API Key (optional, for additional security)
API_KEY_HEADER=X-API-Key
API_KEYS=key1,key2,key3  # Comma-separated valid API keys

# -----------------------------------------------------------------------------
# CORS SETTINGS
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=*

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=7 days

# -----------------------------------------------------------------------------
# BACKGROUND TASKS (Optional)
# -----------------------------------------------------------------------------
# Celery (uncomment if using)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Redis (uncomment if using caching)
# REDIS_URL=redis://localhost:6379/1
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=1
# REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# EMAIL SETTINGS (Optional)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourapp.com
# SMTP_TLS=true

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES (Optional)
# -----------------------------------------------------------------------------
# AWS
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=

# OpenAI
# OPENAI_API_KEY=

# Stripe
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# MONITORING (Optional)
# -----------------------------------------------------------------------------
# Sentry
# SENTRY_DSN=

# -----------------------------------------------------------------------------
# TESTING
# -----------------------------------------------------------------------------
TESTING=false
TEST_DATABASE_URL=sqlite:///./test.db
